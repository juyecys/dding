<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.dingduoduo.dao.audio.AudioLectureGroupDAO">

	<insert id="create" parameterType="AudioLectureGroupM">
		INSERT INTO
			ding_radio_lecture_group (id, created_by, created_date, updated_date, updated_by,
			course_id, name, sequence, is_exist)
	  	VALUES
	  		(#{id}, #{createdBy}, #{createdDate}, #{updatedDate}, #{updatedBy}
	  		, #{courseId}, #{name}, #{sequence}, #{isExist})
	</insert>

	<update id="update" parameterType="AudioLectureGroupM">
		UPDATE ding_radio_lecture_group
		<set>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="updatedDate != null">
				updated_date = #{updatedDate},
			</if>
			<if test="updatedBy != null">
				updated_by = #{updatedBy},
			</if>
			<if test="sequence != null">
				sequence = #{sequence},
			</if>
			<if test="isExist != null">
				is_exist = #{isExist},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<sql id="sql_where">
		<where>
			<if test="id != null">
				and rlg.id = #{id}
			</if>
			<if test="courseId != null">
				and rlg.course_id = #{courseId}
			</if>
		</where>
	</sql>

	<sql id="from_table">
		ding_radio_lecture_group rlg
	</sql>

	<select id="findByConditionPage" resultType="AudioLectureGroupQM">
		SELECT
		rlg.*
		FROM
		<include refid="from_table" />
		<include refid="sql_where" />
	    ORDER BY rlg.created_date DESC
	</select>

	<select id="findOneByCondition" resultType="AudioLectureGroupQM">
		SELECT
		rlg.*
		FROM
		<include refid="from_table" />
		<include refid="sql_where" />
		LIMIT 1
	</select>

	<select id="findByCondition" resultType="AudioLectureGroupQM">
		SELECT
		rlg.*
		FROM
		<include refid="from_table" />
		<include refid="sql_where" />
		ORDER BY rlg.sequence DESC
	</select>
</mapper>

